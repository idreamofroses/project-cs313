    <div class="jumbotron col-sm-8 col-sm-push-2">
        <h1 class="text-center">Manage Quizzes</h1>
        <h2 class="text-center"><%= sql[0].name  %>: <%= sql[0].class_code  %> - <%= sql[0].section  %></h2>
    </div>
    
    <div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-push-2">
            <h3 ><%= sql[0].quizname  %> - Question: <%= sql[0].question %></h3>
            <table class="table">
                <tr>
                    <th> </th>
                    <th> Answer </th>
                    <th> Is Answer </th>
                </tr>
                <% for(var i = 0; i < sql.length; i++) {%>
                <tr>
                    <td></td>
                    <td> <%= sql[i].choice %> </td>
                    <% if(sql[i].answer){ %>
                        <td><span class="glyphicon glyphicon-check" aria-hidden="true"></span></td>
                    <% } else{ %>  
                        <td></td>
                    <% } %>
                </tr>
                <% } %>
            </table>
        </div>    
    </div>
    </div>
    
    <div class="container">
    <form action="/newAnswer" method="post">
        <div class="row">
        <div class="form-group col-sm-2 col-sm-push-3">
            <input type="hidden" name="questionId" value="<%= sql[0].question_id %>">
            <input type="hidden" name="quizId" value="<%= sql[0].quiz_id %>">
            <input type="text" id="newAnswer" name="newAnswer" class="form-control" default="Enter New Answer">
        </div>
        <div class="form-group col-sm-1 col-sm-push-4">
            <input type="checkbox" name="isAnswer">
        </div>
        <div class="form-group col-sm-3 col-sm-push-4">
            <button type="submit" class="btn btn-default">Add Answer</button>
        </div>
        </div>
        <div class="row">
        <div class="col-sm-2 col-sm-push-2">
            <a href="viewquizzes.html" class="btn btn-default"><span class='glyphicon glyphicon-arrow-left' aria-hidden='true'></span> Select Different Quiz</a>
        </div>
        <div class="col-sm-2 col-sm-push-4">
            <a href="/viewQuiz?courseNumber=0&quizName=<%= sql[0].quiz_id %>" class="btn btn-default">Select Different Question <span class='glyphicon glyphicon-arrow-right' aria-hidden='true'></span></a>
        </div>
        </div>
    </form>
